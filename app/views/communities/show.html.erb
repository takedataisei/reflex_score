<div class="container">
  <div class="sidebar">
    <!-- サイドバーの中身は後で追加 -->
  </div>
  <div class="main-content">
    <div class="community-details">
      <div class="community-header">
        <h1><%= @community.name %></h1>
        <p><%= @community.description %></p>
      </div>
      <div class="community-section">
        <h2>評価項目</h2>
        <div class="card-container">
          
        </div>
      </div>
      <div class="community-section">
        <h2>参加メンバー</h2>
        <div class="card-container">
          <% @community.users.each do |user| %>
            <div class="card">
              <%= link_to user_path(user.id) do %>
                <div class="card-icon">
                  <% if user.image.attached? %>
                    <%= image_tag user.image, class: 'profile-image' %>
                  <% else %>
                    <%= image_tag 'no_image.png', class: 'profile-image' %>
                  <% end %>
                </div>
                <div class="card-content">
                  <h3><%= user.username %></h3>
                  <% if user == current_user %>
                    <%= button_to 'コミュニティを抜ける', '#', class: 'leave-button' %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <% if current_user.community_memberships.find_by(community: @community).role == 'admin' %>
        <%= link_to 'コミュニティを編集', '#', class: 'edit-button' %>
      <% end %>
    </div>
  </div>
</div>