<%= form_with model: @community, local: true, html: { class: "community-form" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "コミュニティ名" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "説明" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirm, "パスワード（確認）" %>
    <%= f.password_field :password_confirm, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "コミュニティを作成", class: "btn btn-primary" %>
  </div>
<% end %>