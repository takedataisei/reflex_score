<div class="login-wrap">
  <div class="login-html">
    <input id="tab-1" type="radio" name="tab" class="sign-in" <%= 'checked' if @active_tab == 'sign_in' %>><label for="tab-1" class="tab">Sign In</label>
    <input id="tab-2" type="radio" name="tab" class="sign-up" <%= 'checked' if @active_tab == 'sign_up' %>><label for="tab-2" class="tab">Sign Up</label>
    <div class="login-form">
      <div class="sign-in-htm">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="group">
            <label for="user" class="label">Email</label>
            <%= f.email_field :email, class: 'input', autofocus: true, autocomplete: "email" %>
          </div>
          <div class="group">
            <label for="pass" class="label">Password</label>
            <%= f.password_field :password, class: 'input', autocomplete: "current-password" %>
          </div>
          <div class="group">
            <%= f.check_box :remember_me, class: 'check' %>
            <label for="remember_me"><span class="icon"></span> Keep me Signed in</label>
          </div>
          <div class="group">
            <%= f.submit "Sign In", class: 'button' %>
          </div>
          <div class="hr"></div>
          <div class="foot-lnk">
            <%= link_to "Forgot Password?", new_password_path(resource_name) %>
          </div>
        <% end %>
      </div>
      <div class="sign-up-htm">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="group">
            <label for="user" class="label">Username</label>
            <%= f.text_field :username, class: 'input', autofocus: true, autocomplete: "username" %>
          </div>
          <div class="group">
            <label for="pass" class="label">Email</label>
            <%= f.email_field :email, class: 'input', autofocus: true, autocomplete: "email" %>
          </div>
          <div class="group">
            <label for="pass" class="label">Password</label>
            <%= f.password_field :password, class: 'input', autocomplete: "new-password" %>
          </div>
          <div class="group">
            <label for="pass" class="label">Repeat Password</label>
            <%= f.password_field :password_confirmation, class: 'input', autocomplete: "new-password" %>
          </div>
          <div class="group">
            <%= f.submit "Sign Up", class: 'button' %>
          </div>
          <div class="hr"></div>
          <div class="foot-lnk">
            <label for="tab-1">Already Member?</label>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>